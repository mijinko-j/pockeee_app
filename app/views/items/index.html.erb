<div class='contents-wrap'>
  <h2 class='page-ttl'><span class='member-ttl-name'><%= current_user.family_name %><span class='member-ttl-name-small'>さんちの</span>おてつだいリスト</span></h2>
  <table class='item-list-wrap'>
    <tr>
      <th>項目名</th>
      <th>金額</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
    <% current_user.items.each do |item| %>
    <tr>
      <td class='item-list-name'><%= item.name %></td>
      <td class='item-list-price'><%= item.price %><span>円</span></td>
      <td class='item-list-edit-btn'><%= link_to '編集', edit_item_path(item.id), method: :get %></td>
      <td class='item-list-delete-btn'><%= link_to '削除', item_path(item.id), method: :delete %></td>
    </tr>
    <% end %>
  </table>
  <div class='item-add-btn'>
    <%= link_to 'おてつだい追加', new_item_path %>
  </div>
</div>