<div class='contents-wrap'>
  <h2 class='page-ttl' style='color: <%= @member.color %>;'>
    <span class="member-ttl-name" style='border-bottom: 2px dotted <%= @member.color %>'><%= @member.name %><span class="member-ttl-name-small">さんの</span>ポッケー</span>
  </h2>
  <ul class="member-list-wrap">
    <li class="member-detail-img"><%= image_tag @member.image, class: "member-img" if @member.image.attached? %></li>
  </ul>
  <div class="member-btn">
    <ul class="member-btn-list">
      <li><%= link_to 'おてつだいを登録する(とうろく)', member_posts_path(@member.id) %></li>
      <li><%= link_to 'メンバー編集(へんしゅう)', edit_member_path(@member.id), method: :get %></li>
      <li><%= link_to 'メンバー削除(さくじょ)', member_path(@member.id), method: :delete %></li>
    </ul>
  </div>
</div>
