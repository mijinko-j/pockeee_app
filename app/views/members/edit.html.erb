<div class='contents-wrap'>
  <h2 class='page-ttl'><span class="member-ttl-name"><%= @member.name %><span class="member-ttl-name-small">さんの</span>ポッケー編集</span></h2>
  <%= form_with model: @member, class: 'member-form-wrap', local: true do |f|%>
  <div class='form-wrap'>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メンバーの名前(なまえ)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :name, class: "input-default", id:"member-name", placeholder:"ひろ・花・タックン・mikoなど" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">1ヶ月のおこづかい</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='form-input-wrap'>
        <%= f.text_field :fixed, class: "input-default input-custom", id:"member-fixed", placeholder:"例）300" %>
        <span class="form-yen">円(えん)</span>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">カラー</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :color, class: "input-default", id:"member-color", placeholder:"test" %>
    </div>
    <div class="form-group">
      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">画像</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.file_field :image, id:"member-image" %>
      </div>
    </div>
    <div class="member-save-btn-wrap">
      <%= f.submit "保存する", class: "member-save-btn" %>
    </div>
  </div>
  <% end %>
  <div class="member-btn">
    <ul class="member-btn-list">
      <li>
        <%= link_to 'メンバー削除(削除)', member_path(@member.id), method: :delete %>
      </li>
    </ul>
  </div>
</div>
