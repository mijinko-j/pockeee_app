<section id='comment-new' class='contents-section'>
  <%= form_with model: [@member, @comment], id: "comment-form", class: "comment-member-wrap" do |f| %>
    <%= f.collection_select :comment_member, current_user.members.all, :id, :name, include_blank: "コメントするひと" %>
    <%= f.text_field :comment , class: "comment-form-text", placeholder: 'コメントをかく'%>
    <%= f.submit "コメントをする", id: "comment-form-submit", class: "comment-form-submit", style: "background: #{@member.color};" %>
  <% end %>
  </section>