<div class='contents-wrap'>
  <section class='contents-section' >
    <h2 class='page-ttl'><span>ログイン<span></h2>
    <p class="form-info">pockeee(ポッケー)は、<br>まいつきの おたのしみの おこづかいと<br>がんばった おてつだいの おだちんを<br>かんりする アプリです。</p>
    <%= form_with model: @user, url: user_session_path, class: 'registration-main' do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
    <div class='form-wrap'>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class='register-btn-wrap'>
        <%= f.submit "ログイン" ,class:"register-btn" %>
      </div>
    </div>
    <% end %>
  </section>
</div>